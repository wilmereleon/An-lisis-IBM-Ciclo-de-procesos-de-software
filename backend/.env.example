# IBM Quality Management Backend - Variables de Entorno

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ibm_quality_management
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# JWT Configuration
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# API Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_email
EMAIL_FROM=noreply@ibm-quality.com

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Cache
CACHE_TTL=3600

# IBM Quality Management
COMPANY_NAME=IBM Colombia
SYSTEM_NAME=Quality Management System
ADMIN_EMAIL=admin@ibm.com

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_super_seguro

# Metrics Collection
METRICS_RETENTION_DAYS=90
METRICS_AGGREGATION_INTERVAL=300000

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs